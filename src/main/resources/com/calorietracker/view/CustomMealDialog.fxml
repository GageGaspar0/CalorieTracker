<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:id="dialogPane" xmlns:fx="http://javafx.com/fxml"
             prefHeight="260"
            fx:controller="com.calorietracker.ui.controllers.CustomMealDialogController">
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Meal name:" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Calories per serving:" GridPane.rowIndex="1"/>
            <TextField fx:id="calField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Fat (g)" GridPane.rowIndex="2"/>
            <TextField fx:id="fatField" prefWidth="80" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Protein (g)" GridPane.rowIndex="3"/>
            <TextField fx:id="proField" prefWidth="80" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Carbs (g)" GridPane.rowIndex="4"/>
            <TextField fx:id="carbField" prefWidth="80" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Sugar (g)" GridPane.rowIndex="5"/>
            <TextField fx:id="sugarField" prefWidth="80" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Quantity:" GridPane.rowIndex="6"/>
            <Spinner fx:id="qtySpinner" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Notes:" GridPane.rowIndex="7"/>
            <TextArea fx:id="notesArea" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:id="addBtn" text="Add" buttonData="OK_DONE"/>
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
